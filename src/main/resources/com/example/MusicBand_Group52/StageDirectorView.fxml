<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.MusicBand_Group52.StageDirectorController"
            prefWidth="900" prefHeight="700">

    <!-- Left Navigation Panel -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 20;" alignment="TOP_CENTER">
            <Label text="Stage Director Panel"
                   style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;"
                   wrapText="true"/>
            <Button text="Design Stage Layout" fx:id="btnStageLayout" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Member Movement Plan" fx:id="btnMovementPlan" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Coordinate with Prop Team" fx:id="btnPropTeam" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Schedule Rehearsals" fx:id="btnRehearsalSchedule" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Align Performance Cues" fx:id="btnPerformanceCues" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Handle Live Emergencies" fx:id="btnLiveEmergencies" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Post-Concert Review" fx:id="btnPostReview" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Media Shoot Stage Setup" fx:id="btnMediaSetup" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        </VBox>
    </left>


    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">


            <Label fx:id="lblWelcome" text="Select a goal from the left panel to begin."
                   style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>

            <!-- Goal 1: Design Stage Layout -->
            <AnchorPane fx:id="goal1Pane" visible="false">
                <Label text="Goal 1: Design Stage Layout for Upcoming Concert" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Log in, select date/venue, check layout dimensions, save and share with Band Manager  Lighting Tech" layoutX="10" layoutY="50"/>
            </AnchorPane>

            <!-- Goal 2: Member Movement Plan -->
            <AnchorPane fx:id="goal2Pane" visible="false">
                <Label text="Goal 2: Create Member Movement Plan" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Open Movement Planning, assign positions/transitions, validate safety, save script, send to members" layoutX="10" layoutY="50"/>
            </AnchorPane>

            <!-- Goal 3: Coordinate with Prop Team -->
            <AnchorPane fx:id="goal3Pane" visible="false">
                <Label text="Goal 3: Coordinate with Prop Team for Setup" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Open Prop Management, verify props, assign slots, save checklist, notify crew" layoutX="10" layoutY="50"/>
            </AnchorPane>

            <!-- Goal 4: Schedule Rehearsals -->
            <AnchorPane fx:id="goal4Pane" visible="false">
                <Label text="Goal 4: Schedule Rehearsals" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Access rehearsal calendar, book stage slots, input script cues, validate schedule, send finalized calendar" layoutX="10" layoutY="50"/>
            </AnchorPane>

            <!-- Goal 5: Align Performance Cues -->
            <AnchorPane fx:id="goal5Pane" visible="false">
                <Label text="Goal 5: Align Performance Cues with Lighting  Sound" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Open cue panel, select songs, input visual/audio triggers, validate conflicts, collaborate with crew, finalize draft" layoutX="10" layoutY="50"/>
            </AnchorPane>

            <!-- Goal 6: Handle Live Emergencies -->
            <AnchorPane fx:id="goal6Pane" visible="false">
                <Label text="Goal 6: Handle Live Show Emergencies" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Open Emergency Plan, assign roles, validate backup paths, assign team, share plan with crew" layoutX="10" layoutY="50"/>
            </AnchorPane>

            <!-- Goal 7: Post-Concert Review -->
            <AnchorPane fx:id="goal7Pane" visible="false">
                <Label text="Goal 7: Conduct Post-Concert Review" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Log into reports, review footage, input notes, generate PDF summary, send report" layoutX="10" layoutY="50"/>
            </AnchorPane>

            <!-- Goal 8: Media Shoot Stage Setup -->
            <AnchorPane fx:id="goal8Pane" visible="false">
                <Label text="Goal 8: Prepare Stage Setup for Media Shoots" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Open media planner, configure stage, check lighting/pathways, assign crew, publish setup" layoutX="10" layoutY="50"/>
            </AnchorPane>

        </StackPane>
    </center>

</BorderPane>

