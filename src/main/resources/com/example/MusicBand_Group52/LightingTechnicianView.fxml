<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.MusicBand_Group52.LightingTechnicianController"
            prefWidth="900" prefHeight="700">

    <left>
        <VBox spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 20;" alignment="TOP_CENTER">
            <Label text="Lighting Technician Panel"
                   style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;"
                   wrapText="true"/>
            <Button text="Setup Concert Lighting" fx:id="btnSetupLighting" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Test Rehearsal Lighting" fx:id="btnTestRehearsal" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Backup Lighting Plan" fx:id="btnBackupPlan" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Inspect  Maintain Equipment" fx:id="btnMaintenance" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Synchronize with Music Cues" fx:id="btnCueSync" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Coordinate with Stage Director" fx:id="btnCueCoordination" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Media Shoot Setup" fx:id="btnMediaShoot" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Post-Concert Report" fx:id="btnPostReport" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">

            <Label fx:id="lblWelcome" text="Select a goal from the left panel to begin."
                   style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>

            <!-- Goal 1: Setup Concert Lighting -->
            <AnchorPane fx:id="goal1Pane" visible="false">
                <Label text="Goal 1: Setup Concert Lighting Configuration" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Login, select venue/date, choose presets, check equipment, save configuration" layoutX="10" layoutY="50"/>
            </AnchorPane>

            <!-- Goal 2: Test Rehearsal Lighting -->
            <AnchorPane fx:id="goal2Pane" visible="false">
                <Label text="Goal 2: Test Lighting During Rehearsal" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Load rehearsal session, adjust lights, validate cues, save 'Rehearsal Version'" layoutX="10" layoutY="50"/>
            </AnchorPane>

            <!-- Goal 3: Backup Lighting Plan -->
            <AnchorPane fx:id="goal3Pane" visible="false">
                <Label text="Goal 3: Create Backup Lighting Plan" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Access emergency module, input alternate equipment, assign contact, save plan" layoutX="10" layoutY="50"/>
            </AnchorPane>

            <!-- Goal 4: Inspect & Maintain Equipment -->
            <AnchorPane fx:id="goal4Pane" visible="false">
                <Label text="Goal 4: Inspect and Maintain Equipment" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Open maintenance section, scan devices, flag faulty items, update logs" layoutX="10" layoutY="50"/>
            </AnchorPane>

            <!-- Goal 5: Synchronize with Music Cues -->
            <AnchorPane fx:id="goal5Pane" visible="false">
                <Label text="Goal 5: Synchronize Lighting with Music Cues" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Upload tracks, assign effects to beats, check conflicts, save script" layoutX="10" layoutY="50"/>
            </AnchorPane>

            <!-- Goal 6: Coordinate with Stage Director -->
            <AnchorPane fx:id="goal6Pane" visible="false">
                <Label text="Goal 6: Coordinate Lighting with Stage Director" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Review stage transitions, align lighting, confirm preview, finalize script" layoutX="10" layoutY="50"/>
            </AnchorPane>

            <!-- Goal 7: Media Shoot Setup -->
            <AnchorPane fx:id="goal7Pane" visible="false">
                <Label text="Goal 7: Prepare Lighting for Media Shoot" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Input studio size, camera angles, assign zones, lock setup" layoutX="10" layoutY="50"/>
            </AnchorPane>

            <!-- Goal 8: Post-Concert Report -->
            <AnchorPane fx:id="goal8Pane" visible="false">
                <Label text="Goal 8: Generate Post-Concert Lighting Report" layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Steps: Retrieve logs, note issues, generate PDF, send report" layoutX="10" layoutY="50"/>
            </AnchorPane>

        </StackPane>
    </center>

</AnchorPane>